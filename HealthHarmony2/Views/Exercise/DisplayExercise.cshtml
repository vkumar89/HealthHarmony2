@model HealthHarmony2.Models.Exercise
@{
    ViewBag.Title = "DisplayExercise";
}
<h1 class="text-center">Exercise Details</h1>

<img class="card-img-top" src='/Uploads/@Model.ExerciseImage' alt="No Image"  height="450" />
<table class="table table-success table-striped-columns table-hover modal-dialog-scrollable   ">
    <tr>
        <th>@Html.DisplayNameFor(E => E.ExerciseName)</th>
        <td>@Html.DisplayFor(E => E.ExerciseName)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(E => E.ExerciseBodyPart)</th>
        <td>@Html.DisplayFor(E => E.ExerciseBodyPart)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(E => E.ExerciseDescription)</th>
        <td>@Html.DisplayFor(E => E.ExerciseDescription)</td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(E=>E.ExerciseInstructions)
        </th>
        <td>
            @Html.DisplayFor(E=>E.ExerciseInstructions)
        </td>
    </tr>
    <tr>
        <td colspan="2">

            <a href="http://localhost:60379/Exercise/DisplayExercises"><button class="btn btn-warning link-light text-decoration-none fw-bold" style="width:100%;height:50px">Back to Exercise </button></a>
        </td>
    </tr>
</table>