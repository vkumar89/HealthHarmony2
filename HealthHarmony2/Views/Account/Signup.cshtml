@model HealthHarmony2.Models.User
@{
    ViewBag.Title = "Signup";
}

<div class=" bg-gradient-primary bg-danger" id="container">
    <div class="row justify-content-center ">
        <div class="col-md-6 text-white ">
            <h2>Welcome to Health Harmony</h2>
            <p>Create an account to access the Exercises, Workout Routine.</p>
            <img src="~/Images/bodybuilding-8536103_1280.png" width="275" height="275" />
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center">Sign Up</h3>
                    @using (Html.BeginForm("Signup", "Account"))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.DisplayNameFor(U => U.Username) <br />
                            @Html.ValidationMessageFor(U => U.Username, "", new { @class = "text-danger fw-bold" })
                            @Html.TextBoxFor(U => U.Username, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            @Html.DisplayNameFor(U => U.Email)<br />
                            @Html.ValidationMessageFor(U => U.Email, "", new { @class = "text-danger fw-bold" })
                            @Html.TextBoxFor(U => U.Email, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            @Html.DisplayNameFor(U => U.Password)<br />
                            @Html.ValidationMessageFor(U => U.Password, "", new { @class = "text-danger fw-bold" })

                            @Html.PasswordFor(U => U.Password, new { @class = "form-control" })

                        </div>
                        <br />
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="terms" name="term">
                            <label class="form-check-label" for="terms">I've read and agree with @Html.ActionLink("Terms of Service and our Privacy Polic", "PrivacyPolicy", "ContactUs")</label>
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary btn-block" disabled>Sign Up</button>
                            <button type="button" class="btn btn-primary btn-block">
                                @Html.ActionLink("LogIn", "LogIn", "Account", new { }, new { @class = "link-light text-decoration-none " })
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        min-height: 75vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<script>
$(document).ready(function() {
    // Disable submit button initially
    $('button[type="submit"]').prop('disabled', true);

    // Listen for changes on the checkbox
    $('#terms').change(function() {
        if ($(this).is(':checked')) {
            // If checkbox is checked, enable submit button
            $('button[type="submit"]').prop('disabled', false);
        } else {
            // If checkbox is not checked, disable submit button
            $('button[type="submit"]').prop('disabled', true);
        }
    });
});
</script>